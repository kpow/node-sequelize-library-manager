extends ../layout

block content
  p
   a.button(href="/books/new") Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
      each book in books
        tr
          td
            a(href = "/books/" + book.id)= book.title
          td= book.author
          td= book.genre
          td= book.year
  if books.length < 1   
    h2 No matches try again    